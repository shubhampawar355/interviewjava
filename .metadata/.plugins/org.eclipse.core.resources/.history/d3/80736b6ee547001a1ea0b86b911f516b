import java.util.Scanner;

import javax.swing.plaf.SliderUI;

public class Test {
	
	public static Scanner sc=new Scanner(System.in);
public static void main(String[] args) {
	
	

	String str=new String();
	
	System.out.println("Enter string to reverse");
	
	str = sc.nextLine();
	
	String revstr=Test.reverseString(str);
	System.out.println("string len="+Test.strLen(str));
	
	System.out.println("String after reverse");
	System.out.println(revstr);
	System.out.println("String after reverse by words");
	System.out.println(Test.reverseByWord(str));
	
	System.out.println("substr ");
	System.out.println(Test.substr(str, 1));
	
	
}

private static String substr(String str,int index) {
	
	char[] strarr = str.toCharArray();
	String res=new String();
	while(index<strarr.length) {
		res+=strarr[index];
		index++;
	}
	return res;
}

private static String reverseString(String str) {
	if(str==null || Test.strLen(str)<=1)
		return str;
	return reverseString(Test.substr(str, 1))+str.charAt(0);
	
}


private static String reverseByWord(String str) {
	String result=new String();
	String splitArr[]=str.split(" ");
	for(int i=splitArr.length-1;i>=0;i--)
		result+=splitArr[i]+" ";
	return result;
}

private static int strLen(String str) {
	int len=0;
	char[] strarr = str.toCharArray();
	if(str.isEmpty())
		return len;
	else
	{
		for (char c : strarr)
				len+=1;
		return len;
	}
}


}
